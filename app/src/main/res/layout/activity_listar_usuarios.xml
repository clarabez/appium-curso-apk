<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".ListUsers">


    <View
        android:id="@+id/view"
        android:layout_width="451dp"
        android:layout_height="117dp"
        android:layout_marginTop="0dp"
        android:background="@color/appium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="curso de appium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_curso_de_appium"
        android:textSize="24sp"
        android:fontFamily="@font/ubuntu_light"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.497" />

    <TextView
        android:id="@+id/text_por_maria_clara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ubuntu_light"
        android:text="por Maria Clara"
        android:textColor="@color/appium"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_appium" />

    <ImageView
        android:layout_width="133dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/appium_logo_sem_nome"
        android:id="@+id/image_appium"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.498" />

